{
  "name": "@att/shopping-mcp-server",
  "version": "1.0.0",
  "description": "AT&T Shopping MCP Server with Interactive UI Apps",
  "type": "module",
  "bin": {
    "att-shopping-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "data"
  ],
  "scripts": {
    "build": "npx tsc --noEmit && npx tsc -p tsconfig.server.json && cross-env INPUT=mcp-app.html npx vite build",
    "build:ui": "cross-env INPUT=mcp-app.html npx vite build",
    "start": "npx concurrently \"cross-env NODE_ENV=development INPUT=mcp-app.html npx vite build --watch\" \"npx tsx watch main.ts\"",
    "serve": "npx tsx main.ts",
    "dev": "npm run start",
    "typecheck": "npx tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "exceljs": "^4.4.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-singlefile": "^2.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "att",
    "shopping",
    "ecommerce"
  ],
  "license": "MIT"
}
